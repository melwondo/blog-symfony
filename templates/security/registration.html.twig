{% extends 'base.html.twig' %}

{% block body %}

    <h1>Inscription sur le site</h1>

    {{ form_start(form) }}

    {{ form_row(form.email, { 'attr' : { 'placeholder' : " Entrer votre adresse mail. " }}) }}
    {{ form_row(form.username, { 'label' : "Nom d\ 'utilisateur", 'attr' : { 'placeholder' : " Entrer votre nom d'utilisateur. " }}) }}
    {{ form_row(form.password, { 'label' : "Mot de passe", 'attr' : { 'placeholder' : " Entrer votre mot de passe. " }}) }}
    {{ form_row(form.confirm_password, { 'label' : "Confirmation", 'attr' : { 'placeholder' : " Confirmer votre mot de passe. " }}) }}
    <button type="submit" class="btn btn-success">Inscription !</button>
    {{ form_end(form) }}

{% endblock %}